{{ 'section-hero-small.css' | asset_url | stylesheet_tag }}

<section class="background-contrast">
    <div class="hero-section container component-padding-y">
        <div class="hero-background">
            {% if section.settings.image_desktop != blank %}
                <div class="hero-background-desktop">
                    <div class="image__wrapper image__aspect--16-9">
                        <img
                                class="image__img hero-background-image"
                                src="{{ section.settings.image_desktop | image_url: width: 1440 }}"
                                srcset="
                                {{ section.settings.image_desktop | image_url: width: 375 }} 375w,
                                {{ section.settings.image_desktop | image_url: width: 750 }} 750w,
                                {{ section.settings.image_desktop | image_url: width: 1100 }} 1100w,
                                {{ section.settings.image_desktop | image_url: width: 1440 }} 1440w,
                                {{ section.settings.image_desktop | image_url: width: 1920 }} 1920w
                            "
                                sizes="100vw"
                                alt="{{ section.settings.image_alt | escape }}"
                                width="{{ section.settings.image_desktop.width }}"
                                height="{{ section.settings.image_desktop.height }}"
                                loading="eager"
                                fetchpriority="high"
                        >
                    </div>
                </div>
            {% endif %}

            {% if section.settings.image_mobile != blank and section.settings.image_mobile != section.settings.image_desktop %}
                <div class="hero-background-mobile">
                    <div class="image__wrapper image__aspect--4-3">
                        <img
                                class="image__img hero-background-image"
                                src="{{ section.settings.image_mobile | image_url: width: 768 }}"
                                srcset="
                                {{ section.settings.image_mobile | image_url: width: 375 }} 375w,
                                {{ section.settings.image_mobile | image_url: width: 550 }} 550w,
                                {{ section.settings.image_mobile | image_url: width: 768 }} 768w
                            "
                                sizes="100vw"
                                alt="{{ section.settings.image_alt | escape }}"
                                width="{{ section.settings.image_mobile.width }}"
                                height="{{ section.settings.image_mobile.height }}"
                                loading="eager"
                                fetchpriority="high"
                        >
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="hero-decor--desktop" aria-hidden="true" preserveAspectRatio="none">
            {{ 'decor-hero-small-background-desktop.svg' | inline_asset_content }}
        </div>

        <div class="hero-decor--mobile" aria-hidden="true" >
            {{ 'decor-hero-background-mobile.svg' | inline_asset_content }}
        </div>

        <div class="hero-content">
            {% if section.settings.heading_h1 != blank %}
                <h1 class="hero-title">{{ section.settings.heading_h1 }}</h1>
            {% endif %}

            {% if section.settings.heading_h2 != blank %}
                <h2 class="hero-subtitle">{{ section.settings.heading_h2 }}</h2>
            {% endif %}

            {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_link }}" class="button-{{ section.settings.button_type }}">
                    {{ section.settings.button_text }}
                </a>
            {% endif %}
        </div>

    </div>

    {% if section.settings.show_breadcrumbs %}
        {% render 'hero-small-breadcrumbs', breadcrumb_text: section.settings.breadcrumb_current %}
    {% endif %}
</section>

{% schema %}
{
  "name": "Hero Klein",
  "tag": "section",
  "class": "section-hero-small",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Hintergrundbild Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Hintergrundbild Mobile",
      "info": "Optional: Separates Bild f端r Mobile. Wenn leer, wird das Desktop-Bild verwendet."
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Bild Alt-Text"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Breadcrumbs anzeigen",
      "default": true
    },
    {
      "type": "text",
      "id": "breadcrumb_current",
      "label": "Aktueller Breadcrumb Text (optional)",
      "info": "Leer lassen f端r automatische Erkennung"
    },
    {
      "type": "text",
      "id": "heading_h1",
      "label": "Haupt端berschrift (H1)",
      "default": "Lorem Ipsum"
    },
    {
      "type": "text",
      "id": "heading_h2",
      "label": "Unter端berschrift (H2)",
      "default": "Entdecken Sie unsere Produkte"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt entdecken"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button Type",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "tertiary",
          "label": "Tertiary"
        }
      ],
      "default": "primary"
    }
  ],
  "presets": [
    {
      "name": "Hero Klein",
      "category": "Hero"
    }
  ]
}
{% endschema %}