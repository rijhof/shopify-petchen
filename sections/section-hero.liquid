{{ 'section-hero.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.js' | asset_url | script_tag }}

<section class="background-contrast">
    <div class="hero-section container">
        <div class="hero-background">

            {% if section.settings.image_desktop != blank %}
                <div class="hero-background-desktop">
                    {% render 'image',
                            image: section.settings.image_desktop,
                            aspect_ratio: '16-9',
                            decoration_type: 'none',
                            alt: section.settings.image_alt,
                            loading: 'eager',
                            sizes: '100vw',
                            class: 'hero-background-image'
                    %}
                </div>
            {% endif %}

            {% if section.settings.image_mobile != blank and section.settings.image_mobile != section.settings.image_desktop %}
                <div class="hero-background-mobile">
                    {% render 'image',
                            image: section.settings.image_mobile,
                            aspect_ratio: '4-3',
                            decoration_type: 'none',
                            alt: section.settings.image_alt,
                            loading: 'eager',
                            sizes: '100vw',
                            class: 'hero-background-image'
                    %}
                </div>
            {% endif %}
        </div>

        <div class="hero-decor--desktop" aria-hidden="true" >
            {{ 'decor-hero-background-desktop.svg' | inline_asset_content }}
        </div>

        <div class="hero-decor--mobile" aria-hidden="true" >
            {{ 'decor-hero-background-mobile.svg' | inline_asset_content }}
        </div>

        <div class="hero-content">
            {% if section.settings.heading_h1 != blank %}
                <h1 class="hero-title">{{ section.settings.heading_h1 }}</h1>
            {% endif %}

            {% if section.settings.heading_h2 != blank %}
                <h2 class="hero-subtitle">{{ section.settings.heading_h2 }}</h2>
            {% endif %}

            {% if section.settings.button_text != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="button-primary">
                    {{ section.settings.button_text }}
                </a>
            {% endif %}
        </div>

    </div>
</section>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Hintergrundbild Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Hintergrundbild Mobile",
      "info": "Optional: Separates Bild für Mobile. Wenn leer, wird das Desktop-Bild verwendet."
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Bild Alt-Text"
    },
    {
      "type": "text",
      "id": "heading_h1",
      "label": "Hauptüberschrift (H1)",
      "default": "Lorem Ipsum"
    },
    {
      "type": "text",
      "id": "heading_h2",
      "label": "Unterüberschrift (H2)",
      "default": "Entdecken Sie unsere Produkte"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt entdecken"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}