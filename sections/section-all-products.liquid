{{ 'section-all-products.css' | asset_url | stylesheet_tag }}
{{ 'snippet-product-card.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.js' | asset_url | script_tag }}

<div class="section-all-products section" aria-labelledby="section-all-products-{{ section.id }}">
    <div class="container">

        {% if section.settings.heading != blank %}
            <div class="section-all-products__precontent">
                <h2 id="section-all-products-{{ section.id }}" class="section-all-products__title">
                    {{ section.settings.heading }}
                </h2>
            </div>
        {% endif %}

        <div class="section-all-products__wrapper">
            <div class="section-all-products__grid">
                {% for product in collections.all.products limit: section.settings.product_limit %}
                    <div class="section-all-products__item">
                        {% render 'product-card',
                                product: product,
                                aspect_ratio: '1-1',
                                show_quick_add: section.settings.show_quick_add,
                        %}
                    </div>
                {% endfor %}
            </div>

            {% if section.settings.show_view_all and section.settings.view_all_url != blank %}
                <div class="section-all-products__footer">
                    <a href="{{ section.settings.view_all_url }}" class="button-secondary icon--right">
                        {{ section.settings.view_all_text | default: 'Alle Produkte anzeigen' }}
                    </a>
                </div>
            {% endif %}
        </div>

        {% if section.settings.button_text != blank %}
            <div class="section-all-products__action">
                {% render 'button',
                        button_text: section.settings.button_text,
                        button_url: section.settings.button_link,
                        button_type: section.settings.button_type,
                        icon_position: section.settings.icon_position
                %}
            </div>
        {% endif %}
    </div>
</div>

{% schema %}
{
  "name": "Alle Produkte",
  "tag": "section",
  "class": "section-all-products-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Inhalt"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Alle Produkte"
    },
    {
      "type": "header",
      "content": "Produkt-Einstellungen"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Anzahl der Produkte",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Maximale Anzahl der angezeigten Produkte"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Quick Add Button anzeigen",
      "default": true
    },
    {
      "type": "header",
      "content": "Alle anzeigen Link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "'Alle anzeigen' Link anzeigen",
      "default": false
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Link Text",
      "default": "Alle Produkte anzeigen"
    },
    {
      "type": "header",
      "content": "Button (Optional)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button Typ",
      "options": [
        {
          "value": "primary",
          "label": "Primär"
        },
        {
          "value": "secondary",
          "label": "Sekundär"
        }
      ],
      "default": "primary"
    },
    {
      "type": "select",
      "id": "icon_position",
      "label": "Icon Position",
      "options": [
        {
          "value": "left",
          "label": "Links"
        },
        {
          "value": "right",
          "label": "Rechts"
        }
      ],
      "default": "right"
    }
  ],
  "presets": [
    {
      "name": "Alle Produkte",
      "category": "Produkte",
      "settings": {
        "heading": "Alle Produkte",
        "product_limit": 12
      }
    }
  ]
}
{% endschema %}