<div class="section container" is="all-products" aria-labelledby="section-all-products-{{ section.id }}">
    {% if section.settings.heading != blank %}
        <h2 id="section-all-products-{{ section.id }}" class="title">
          {{ section.settings.heading }}
        </h2>
    {% endif %}

    <div class="wrapper">
      <div class="grid">
        {% comment %} Initialize tracking variables for duplicate prevention {% endcomment %}
        {% assign displayed_product_ids = '' %}
        {% assign products_count = 0 %}

        {% comment %} Phase 1: Render manually selected products from blocks (prioritized) {% endcomment %}
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            {% if products_count >= section.settings.product_limit %}
              {% break %}
            {% endif %}

            {% assign featured_product = block.settings.product %}

            {% if featured_product != blank %}
              <div class="item" {{ block.shopify_attributes }}>
                {% render 'product-card',
                        product: featured_product,
                        aspect_ratio: '1-1',
                        show_quick_add: section.settings.show_quick_add
                %}
              </div>

              {% comment %} Build comma-separated ID string for duplicate checking {% endcomment %}
              {% if displayed_product_ids == '' %}
                {% assign displayed_product_ids = featured_product.id | append: '' %}
              {% else %}
                {% assign displayed_product_ids = displayed_product_ids | append: ',' | append: featured_product.id %}
              {% endif %}

              {% assign products_count = products_count | plus: 1 %}
            {% endif %}
          {% endfor %}
        {% endif %}

        {% comment %} Phase 2: Auto-fill remaining slots from collections.all {% endcomment %}
        {% if products_count < section.settings.product_limit %}
          {% assign displayed_ids_array = displayed_product_ids | split: ',' %}

          {% for product in collections.all.products %}
            {% if products_count >= section.settings.product_limit %}
              {% break %}
            {% endif %}

            {% comment %} Duplicate check: O(n×m) complexity due to nested loop {% endcomment %}
            {% assign product_id_string = product.id | append: '' %}
            {% assign is_already_displayed = false %}

            {% for displayed_id in displayed_ids_array %}
              {% if displayed_id == product_id_string %}
                {% assign is_already_displayed = true %}
                {% break %}
              {% endif %}
            {% endfor %}

            {% comment %} Render only products not in Phase 1 {% endcomment %}
            {% unless is_already_displayed %}
              <div class="item">
                {% render 'product-card',
                        product: product,
                        aspect_ratio: '1-1',
                        show_quick_add: section.settings.show_quick_add
                %}
              </div>
              {% assign products_count = products_count | plus: 1 %}
            {% endunless %}
          {% endfor %}
        {% endif %}
      </div>

      {% if section.settings.show_view_all and section.settings.view_all_url != blank %}
        <div class="footer">
          <a href="{{ section.settings.view_all_url }}" class="button-secondary icon--right">
            {{ section.settings.view_all_text | default: 'Alle Produkte anzeigen' }}
          </a>
        </div>
      {% endif %}
    </div>

    {% if section.settings.button_text != blank %}
      <div class="action">
        {% render 'button',
                button_text: section.settings.button_text,
                button_url: section.settings.button_link,
                button_type: section.settings.button_type,
                icon_position: section.settings.icon_position
        %}
      </div>
    {% endif %}
</div>

{% schema %}
{
  "name": "Alle Produkte",
  "tag": "section",
  "class": "section-all-products-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Inhalt"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Alle Produkte"
    },
    {
      "type": "header",
      "content": "Produkt-Einstellungen"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Anzahl der Produkte",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Maximale Anzahl der angezeigten Produkte"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Quick Add Button anzeigen",
      "default": true
    },
    {
      "type": "header",
      "content": "Alle anzeigen Link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "'Alle anzeigen' Link anzeigen",
      "default": false
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Link Text",
      "default": "Alle Produkte anzeigen"
    },
    {
      "type": "header",
      "content": "Button (Optional)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button Typ",
      "options": [
        {
          "value": "primary",
          "label": "Primär"
        },
        {
          "value": "secondary",
          "label": "Sekundär"
        }
      ],
      "default": "primary"
    },
    {
      "type": "select",
      "id": "icon_position",
      "label": "Icon Position",
      "options": [
        {
          "value": "left",
          "label": "Links"
        },
        {
          "value": "right",
          "label": "Rechts"
        }
      ],
      "default": "right"
    }
  ],
  "blocks": [
    {
      "type": "featured_product",
      "name": "Hervorgehobenes Produkt",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Produkt auswählen",
          "info": "Dieses Produkt wird am Anfang angezeigt"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alle Produkte",
      "category": "Produkte",
      "settings": {
        "heading": "Alle Produkte",
        "product_limit": 12
      }
    }
  ]
}
{% endschema %}
