{% comment %}<article itemscope itemtype="http://schema.org/BlogPosting">{% endcomment %}
  {% comment %}{% for block in section.blocks %}{% endcomment %}
    {% comment %}{% case block.type %}{% endcomment %}
      {% comment %}{% when 'article_title' %} {% endcomment %}
        {% comment %}<h1 itemprop="headline">{{ article.title }}</h1>{% endcomment %}
      {% comment %}{% when 'article_author' %}{% endcomment %}
        {% comment %}<div itemscope itemtype="http://schema.org/Person">{% endcomment %}
          {% comment %}{% if section.settings.enable_author %}{% endcomment %}
            {% comment %}<small itemprop="author">{{ article.author }}</small>{% endcomment %}
          {% comment %}{% endif %}{% endcomment %}
        {% comment %}</div>{% endcomment %}
      {% comment %}{% when 'article_published_date' %}{% endcomment %}
        {% comment %}{% if section.settings.enable_published_date %}{% endcomment %}
          {% comment %}<time itemprop="datePublished dateCreated" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>{% endcomment %}
        {% comment %}{% endif %}{% endcomment %}
      {% comment %}{% when 'featured_image' %}{% endcomment %}
        {% comment %}<div itemprop="image">{% endcomment %}
          {% comment %}{% if article.image != blank %}{% endcomment %}
            {% comment %}<img width="{{ article.image.width }}" height="{{ article.image.height }}" src="{{ article.image | image_url: 'large' }}" alt="{{ article.image.alt }}">{% endcomment %}
          {% comment %}{% else %}{% endcomment %}
            {% comment %}{% assign placeholder_image = 'lifestyle-1' %}{% endcomment %}
            {% comment %}{{ placeholder_image | placeholder_svg_tag: '' }}{% endcomment %}
          {% comment %}{% endif %}{% endcomment %}
        {% comment %}</div>{% endcomment %}
      {% comment %}{% when 'article_content' %}{% endcomment %}
        {% comment %}<div itemprop="articleBody">{% endcomment %}
          {% comment %}{{ article.content }}{% endcomment %}
        {% comment %}</div>{% endcomment %}
      {% comment %}{% else %}{% endcomment %}
    {% comment %}{% endcase %}{% endcomment %}
  {% comment %}{% endfor %}{% endcomment %}
{% comment %}</article>{% endcomment %}
{% comment %}{% endcomment %}
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BlogPosting",
  "headline": {{ article.title | json }},
  "articleBody": {{ article.content | strip_html | json }},
  {% if article.excerpt != blank %}
      "description": {{ article.excerpt | strip_html | json }},
  {% endif %}
  {% if article.image %}
    "image": [
      {{ article.image | img_url: "medium" | prepend: 'https:' | json }} 
    ],
  {% endif %}
  "datePublished": {{ article.published_at | date: format: "default" | json }},
  "dateCreated": {{ article.created_at | date: format: "default" | json }},
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }}
  }
}
</script>


{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}