{{ 'snippet-image.js' | asset_url | script_tag }}

{% assign background_classes = '' %}
{% case section.settings.background_color %}
  {% when 'green' %}
    {% assign background_classes = ' background-one background-contrast' %}
  {% when 'dark_green' %}
    {% assign background_classes = ' background-two background-contrast' %}
  {% else %}
    {% assign background_classes = '' %}
{% endcase %}

{% assign layout_class = '' %}
{% if section.settings.products_position == 'right' %}
  {% assign layout_class = ' section-products-image--products-right' %}
{% endif %}

<section class="section-products-image section{{ background_classes }}{{ layout_class }}" aria-labelledby="section-products-image-{{ section.id }}">
  <div class="container">

    {% if section.settings.heading != blank or section.settings.pre_content != blank %}
      <div class="section-products-image__pre-content">
        {% if section.settings.heading != blank %}
          <h2 id="section-products-image-{{ section.id }}" class="section-products-image__title">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.pre_content != blank %}
          <div class="section-products-image__lead lead">
            {{ section.settings.pre_content }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="section-products-image__wrapper">

      <!-- Background Image (60% width) -->
      <div class="section-products-image__background-wrapper">
        {% if section.settings.background_image %}
          {% render 'image',
                  image: section.settings.background_image,
                  aspect_ratio: '3-5',
                  alt: section.settings.image_alt,
                  loading: 'lazy',
                  sizes: '(min-width: 1280px) 60vw, (min-width: 768px) 55vw, 100vw',
                  class: 'section-products-image__background-image'
          %}
        {% else %}
          <div class="section-products-image__background-placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <!-- Products Grid (50% width) -->
      <div class="section-products-image__products">
        <div class="section-products-image__grid">
          {% for block in section.blocks %}
            {% if block.type == 'product' and block.settings.product != blank %}
              <div class="section-products-image__product-item background-reset" {{ block.shopify_attributes }}>
                {% render 'product-card',
                        product: block.settings.product,
                        aspect_ratio: '1-1',
                        loading: 'lazy',
                        show_quick_add: section.settings.show_quick_add,
                        show_wishlist: section.settings.show_wishlist
                %}
              </div>
            {% else %}
              <div class="section-products-image__product-item">
                <div class="section-products-image__placeholder">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

    </div>

    {% if section.settings.button_text != blank %}
      <div class="section-products-image__action">
        {% render 'button',
                button_text: section.settings.button_text,
                button_url: section.settings.button_link,
                button_type: section.settings.button_type,
                icon_position: section.settings.icon_position
        %}
      </div>
    {% endif %}

  </div>
</section>

