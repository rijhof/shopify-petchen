{% liquid
  if section.settings.menu.links == blank
    assign main_menu_linklist = linklists[section.settings.menu].links
  else
    assign main_menu_linklist = section.settings.menu.links
  endif
%}

<div class="header-wrapper">
  {% render 'header-usp-bar' %}

  <header id="header" class="header" role="banner">
    <div class="container">
      <div class="header-inner">
        {% render 'header-desktop-nav', main_menu_linklist: linklists.main-menu %}

        {% render 'header-logo' %}

        {% comment %} {% render 'header-buttons' %} {% endcomment %}

        {% comment %}{% render 'header-searchbar' %}{% endcomment %}

    <nav class="mobile-navigation" id="mobile-navigation" aria-label="Mobile navigation" aria-hidden="true">
      <div class="mobile-navigation-inner">
        {% render 'header-mobile-nav--header' %}

        {% comment %}{% render 'header-mobile-search' %}{% endcomment %}

        {% render 'header-mobile-nav', main_menu_linklist: linklists.main-menu %}
      </div>

      <div class="mobile-nav-footer">
        <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
