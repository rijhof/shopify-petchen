{{ 'section-image-symbols-text.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.css' | asset_url | stylesheet_tag }}
{{ 'snippet-image.js' | asset_url | script_tag }}

{% assign background_classes = '' %}
{% case section.settings.background_color %}
    {% when 'green' %}
        {% assign background_classes = ' background-one background-contrast' %}
    {% when 'dark_green' %}
        {% assign background_classes = ' background-two background-contrast' %}
    {% else %}
        {% assign background_classes = '' %}
{% endcase %}

{% assign layout_class = '' %}
{% if section.settings.image_position == 'right' %}
    {% assign layout_class = ' section-image-symbols-text--image-right' %}
{% endif %}

<div class="section-image-symbols-text section{{ background_classes }}{{ layout_class }}" aria-labelledby="section-image-symbols-text-{{ section.id }}">
    <div class="container">
        <div class="section-image-symbols-text__wrapper">

            <div class="section-image-symbols-text__media">
                {% if section.settings.image %}
                    {% render 'image',
                            image: section.settings.image,
                            aspect_ratio: '1-1',
                            decoration_type: none,
                            alt: section.settings.image_alt,
                            loading: 'lazy',
                            sizes: '(min-width: 1280px) 700px, (min-width: 768px) 50vw, 100vw'
                    %}
                {% else %}
                    <div class="section-image-symbols-text__placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}
            </div>

            <div class="section-image-symbols-text__content">
                <div class="section-image-symbols-text__header">
                    <h2 id="section-image-symbols-text-{{ section.id }}" class="section-image-symbols-text__title">
                        {{ section.settings.heading | default: 'Überschrift' }}
                    </h2>
                </div>

                {% if section.blocks.size > 0 %}
                    <div class="section-image-symbols-text__items">
                        {% for block in section.blocks %}
                            {% case block.type %}
                                {% when 'symbol_text' %}
                                    <div class="symbol-text-item" {{ block.shopify_attributes }}>
                                        <div class="symbol-text-item__icon">
                                            <img src="{{ block.settings.icon | asset_url }}"
                                                 alt=""
                                                 width="40"
                                                 height="40"
                                                 loading="lazy">
                                        </div>
                                        {% if block.settings.heading != blank %}
                                            <h3 class="symbol-text-item__heading">{{ block.settings.heading }}</h3>
                                        {% endif %}
                                        {% if block.settings.content != blank %}
                                            <div class="symbol-text-item__richtext">
                                                {{ block.settings.content }}
                                            </div>
                                        {% endif %}
                                    </div>
                            {% endcase %}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if section.settings.button_text != blank %}
                  <div class="section-image-text__action">
                    {% render 'button',
                            button_text: section.settings.button_text,
                            button_url: section.settings.button_link,
                            button_type: section.settings.button_type,
                            icon_position: section.settings.icon_position
                    %}
                  </div>
                {% endif %}

            </div>

        </div>
    </div>
</div>

