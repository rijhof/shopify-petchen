<div class="footer-row-one">
    <div class="footer-logo">
        <a href="{{ routes.root_url }}" aria-label="Zur Startseite">
            {{ 'logo-petchen.svg' | asset_url | img_tag: alt: shop.name, class: 'footer-logo-img' }}
        </a>
    </div>

    <div class="divider"></div>

    <div class="footer-social">
        {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">
                {{ 'icon-socialmedia-facebook.svg' | asset_url | img_tag: alt: 'Facebook', class: 'social-icon' }}
            </a>
        {% endif %}

        {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
                {{ 'icon-socialmedia-instagram.svg' | asset_url | img_tag: alt: 'Instagram', class: 'social-icon' }}
            </a>
        {% endif %}

        {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" aria-label="Twitter">
                {{ 'icon-socialmedia-twitter.svg' | asset_url | img_tag: alt: 'Twitter', class: 'social-icon' }}
            </a>
        {% endif %}

        {% if section.settings.linkedin_url != blank %}
            <a href="{{ section.settings.linkedin_url }}" target="_blank" rel="noopener" aria-label="LinkedIn">
                {{ 'icon-socialmedia-linkedin.svg' | asset_url | img_tag: alt: 'LinkedIn', class: 'social-icon' }}
            </a>
        {% endif %}

        {% if section.settings.youtube_url != blank %}
            <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener" aria-label="YouTube">
                {{ 'icon-socialmedia-youtube.svg' | asset_url | img_tag: alt: 'YouTube', class: 'social-icon' }}
            </a>
        {% endif %}
    </div>
</div>